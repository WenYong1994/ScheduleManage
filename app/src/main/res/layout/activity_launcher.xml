<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/m_root_view"
    tools:context=".activity.launcher.LauncherActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingPrefix">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/app_name"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/calendar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/look_calendar"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
        />

        <TextView
            android:id="@+id/btn"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="查看阴影"
            android:textColor="@color/colorBlue"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            />
        <TextView
            android:id="@+id/sidesliplist"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="侧滑菜单"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />

        <TextView
            android:id="@+id/hook_replace_skin"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="换肤"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />
        <TextView
            android:id="@+id/speech_wake"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="语音唤醒"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />

        <TextView
            android:id="@+id/float_window_btn"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="悬浮窗"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />

        <TextView
            android:id="@+id/contraint_layout_tv"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="限制布局"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />


        <TextView
            android:id="@+id/kotlin_activity"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="kotlin_activity"
            android:gravity="center"
            android:background="@drawable/item_click_ripple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C2C2C"
            />


    </LinearLayout>

</FrameLayout>